@model IEnumerable<MyLeasing.Web.Data.Entities.Owner>

@{
    ViewData["Title"] = "Index";
}

<h1>Owner</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FixedPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FixedPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ProfilePictureUrl))
                {
                    <img src="@Url.Content(item.ProfilePictureUrl)" alt="Image" style="width: auto; height: 100px; max-width:100%" />
                }
            </td>
            <td>
                <a asp-action="Edit"    asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"   >Details</a>
                <a asp-action="Delete"  asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
